@page "/breadcrumbs-example"
@using MyLittleContentEngine.Services.Content.TableOfContents
@using System.Collections.Immutable

<h2>Breadcrumbs Component Examples</h2>

<h3>Basic Breadcrumbs</h3>
<Breadcrumbs Items="@BasicItems" />

<h3>Custom Separator</h3>
<Breadcrumbs Items="@BasicItems">
    <Separator>
        <span style="margin: 0 8px;">/</span>
    </Separator>
</Breadcrumbs>

<h3>With Custom CSS</h3>
<Breadcrumbs Items="@BasicItems" CssClass="custom-breadcrumbs" />

<h3>Longer Path</h3>
<Breadcrumbs Items="@LongPathItems" />

<style>
    .custom-breadcrumbs {
        background-color: #f3f4f6;
        padding: 8px 16px;
        border-radius: 8px;
    }
</style>

@code {
    private ImmutableList<BreadcrumbItem> BasicItems = ImmutableList.Create(
        new BreadcrumbItem { Name = "Home", Href = "/", IsCurrent = false },
        new BreadcrumbItem { Name = "Documentation", Href = "/docs", IsCurrent = false },
        new BreadcrumbItem { Name = "Components", Href = null, IsCurrent = true }
    );
    
    private ImmutableList<BreadcrumbItem> LongPathItems = ImmutableList.Create(
        new BreadcrumbItem { Name = "Home", Href = "/", IsCurrent = false },
        new BreadcrumbItem { Name = "CLI", Href = "/cli", IsCurrent = false },
        new BreadcrumbItem { Name = "Getting Started", Href = "/cli/getting-started", IsCurrent = false },
        new BreadcrumbItem { Name = "Installation", Href = "/cli/getting-started/installation", IsCurrent = false },
        new BreadcrumbItem { Name = "Windows Setup", Href = null, IsCurrent = true }
    );
}