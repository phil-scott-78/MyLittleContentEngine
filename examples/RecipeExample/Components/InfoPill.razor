@* Reusable info pill for displaying labeled values like cook time, servings, etc. *@

@if (!string.IsNullOrEmpty(Value))
{
    <div class="@($"bg-base-100 px-3 py-1 rounded-lg border border-base-200 {CssClass}")">
        <span class="font-semibold text-base-700">@Label:</span> 
        <span class="text-base-600">@Value</span>
    </div>
}

@code {
    [Parameter, EditorRequired] public string Label { get; set; } = string.Empty;
    [Parameter, EditorRequired] public string Value { get; set; } = string.Empty;
    [Parameter] public string CssClass { get; set; } = string.Empty;
}