@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe Collection</title>
    <base href="/" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body class="h-full bg-base-50 font-sans">
    <div class="min-h-full">
        <header class="bg-white shadow-sm border-b border-base-200">
            <div class="max-w-6xl mx-auto px-4 py-4">
                <nav class="flex items-center justify-between">
                    <div class="flex items-center">
                        <a href="/" class="flex items-center space-x-3 text-xl text-primary-900 hover:text-primary-600 transition-colors duration-200">
                            <div class="w-8 h-8 bg-primary-500  rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                            </div>
                            <span class="font-display">Recipe Collection</span>
                        </a>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a href="/" class="font-display text-primary-600 hover:text-primary-900 font-medium transition-colors duration-200">
                            All Recipes
                        </a>
                    </div>
                </nav>
            </div>
        </header>

        <main class="flex-1">
            @Body
        </main>

        <footer class="bg-white border-t border-base-200 mt-16">
            <div class="max-w-6xl mx-auto px-4 py-8">
                <div class="text-center text-base-600">
                    <p class="mb-2">Recipe Collection powered by <a href="https://cooklang.org/" target="_blank" class="text-primary-600 hover:text-primary-700 font-medium">CookLang</a></p>
                    <p class="text-sm">Built with MyLittleContentEngine and Blazor</p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>