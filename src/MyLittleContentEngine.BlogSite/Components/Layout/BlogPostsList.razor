<div class="space-y-6 md:space-y-10 divide-y divide-base-200 dark:divide-primary-900/50">
    @foreach (var post in Posts.OrderByDescending(i => i.FrontMatter.Date))
    {
        <div class="pt-4 md:pt-8">
            <BlogArticleCard Post="post"></BlogArticleCard>
        </div>
    }
</div>

@code {
    [Parameter] public required IList<MarkdownContentPage<BlogSiteFrontMatter>> Posts { get; set; }
}