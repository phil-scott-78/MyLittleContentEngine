<div class="@ContainerStructureClass @ContainerColorClass">
    <h1 class="@TitleStructureClass @TitleColorClass">@Title</h1>
    <p class="@ContentStructureClass @ContentColorClass">@ChildContent</p>
</div>

@code {
    [Parameter] public required string Title { get; init; }
    [Parameter] public required RenderFragment ChildContent { get; init; }
    [Parameter] public string ContainerStructureClass { get; set; } = "space-y-2 pt-6 pb-8 md:space-y-5";
    [Parameter] public string ContainerColorClass { get; set; } = "";
    [Parameter] public string TitleStructureClass { get; set; } = "font-sans font-extrabold text-5xl md:text-6xl leading-9 sm:leading-10 md:leading-14 tracking-tight";
    [Parameter] public string TitleColorClass { get; set; } = "text-primary-800 dark:text-neutral-100";
    [Parameter] public string ContentStructureClass { get; set; } = "prose prose-invert text-md sm:text-lg md:text-xl leading-7 md:font-light";
    [Parameter] public string ContentColorClass { get; set; } = "text-neutral-900 dark:text-primary-100";
}